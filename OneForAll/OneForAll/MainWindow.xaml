                        Height="40"
                        />
                <Button x:Name="POWERButton"  
                        Content="POWER" FontSize="14" 
                        Click="TabButon_Click"
                        BorderBrush="{x:Null}"
                        pu:ButtonHelper.ButtonStyle="Hollow"                     
                        pu:ButtonHelper.HoverBrush="#00D6FF"
                        Height="40"
                        />
                <Button x:Name="CONTROLButton"  
                        Content="CONTROL" FontSize="14" 
                        Click="TabButon_Click"
                        BorderBrush="{x:Null}"
                        pu:ButtonHelper.ButtonStyle="Hollow"                     
                        pu:ButtonHelper.HoverBrush="#00D6FF"
                        Height="40"
                        />
                <Button x:Name="LORASEARCHButton"  
