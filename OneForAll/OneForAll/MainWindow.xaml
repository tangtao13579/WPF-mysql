<pu:WindowX x:Class="OneForAll.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OneForAll"
        xmlns:pu="clr-namespace:Panuon.UI.Silver;assembly=Panuon.UI.Silver"
        mc:Ignorable="d"
        Title="MainWindow" Height="620" Width="1090" Closing="WindowX_Closing" Loaded="WindowX_Loaded" Background="White">

    <!--窗体头自定义-->
    <pu:WindowXCaption.Header>
        <Grid>
            <Grid.ColumnDefinitions>
                <!--栏宽度自动，能够自适应窗口变大变小-->
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal">
                <Image Height="30" Width="30" Source="LOGO3.png"/>
                <TextBlock FontSize="18"
                       FontWeight="Light"
                       VerticalAlignment="Center"
                       Margin="10,0,30,0"
                       Foreground="Black"
                       Text="OneForAll" />
            </StackPanel>
            
            
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                <!--帮助图标-->
                <Button FontSize="19"
                        Width="28"
                        Height="28"
                        pu:ButtonHelper.ButtonStyle="Link"
                        Foreground="#EAEAEA"
                        Content="&#xe6ae;"
                        FontFamily="/Resources/NeteaseExample/#iconfont"
                        pu:ButtonHelper.HoverBrush="Black"
                        VerticalAlignment="Center"
                        Margin="0,0,10,2" />
                <Grid Margin="0,0,10,0">
                    <!--设置图标-->
                    <Button FontSize="19"
                            Width="28"
                            Height="28"
                            pu:ButtonHelper.ButtonStyle="Link"
                            Foreground="#EAEAEA"
                            Content="&#xe62a;"
                            FontFamily="/Resources/NeteaseExample/#iconfont"
                            pu:ButtonHelper.HoverBrush="Black"
                            VerticalAlignment="Center"
                            Margin="0,0,0,2" 
                            />
                </Grid>
            </StackPanel>
        </Grid>
    </pu:WindowXCaption.Header>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="#FFF0F0F0">
            <StackPanel VerticalAlignment="Top">
                <Image Height="65" Width="100" Source="LOGO3.png" Margin="0,15,0,15"/>
                <Button x:Name="INICFGButton"  
                        Content="INI CFG" FontSize="14" 
                        Click="TabButon_Click"
